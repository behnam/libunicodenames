include Makefile
include indent.mk

blacklist-for-indent += config.h libgettext.h

indent: indent-recursive
	$(call do-indent, $(libunicodenames_la_SOURCES))
	$(call do-indent, $(libunicodenames___la_SOURCES))
	$(call do-indent, $(include_HEADERS))

indent-recursive:
	$(MAKE) -C tests $(AM_MAKEFLAGS) indent

